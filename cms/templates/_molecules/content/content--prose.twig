{%- extends '_molecules/content/_content--props' -%}
{%- import '_macros/atoms' as render -%}

{#
    ### PROPERTIES ###
    ------------------

    INHERITED FROM: `_molecules/content/_content--props.twig`

    ### COMPONENTS ###
    ------------------

    ## ATOMS

    text--content: `_atoms/texts/text--content.twig`
#}

{%- set classes = {
    _default: 'font-primary',
    color: '',
    print: 'print:table print:text-black print:text-sm print:leading-6',
    prose: 'prose md:prose-lg lg:prose-xl prose:max-w-auto',
    prose_link: 'prose-a:text-blue-500 prose-a:no-underline',
    prose_h3: 'prose-h3:2xl md:prose-h3:3xl tracking-tightest prose-h3:font-medium prose-h3:text-gray-500',
    prose_h4: 'prose-h4:xl md:prose-h4:2xl tracking-tightest prose-h4:font-medium prose-h4:text-gray-500',
    prose_list: 'prose-ul:pl-4 prose-ul:mb-10 prose-ol:pl-4 prose-ol:mb-10'
} -%}

{%- block copy -%}

    {%- minify -%}

        <article class="{{- classes._default }} {{ classes.print }} {{ classes.prose }} {{ classes.prose_link }} {{ classes.prose_h3 }} {{ classes.prose_h4 }} {{ classes.prose_list }} {{ classes.color }}">
            {{- render.atom('text', 'content', { content: props.content }) -}}
        </article>

    {%- endminify -%}

{%- endblock -%}
