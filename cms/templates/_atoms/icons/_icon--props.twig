{#
    ### OPTIONS ###
    ---------------

    colour: (STR) -- Adding a colour to the icon
    icon: (STR) -- Font awesome icon class
    iconcss: (STR) -- Adding custom classes to the icon
    parentcss: (STR) -- Adding custom classes to wrapping span of the icon
    size: (STR) -- Adding size choosing between inline / xs / sm / lg / xl / 2xl
    variant: (STR) -- Adding a variant with rect / circle

#}

{%- set props = {
    icon: options.icon ??? 'no-icon',
    parentcss: options.parentcss ??? null,
    iconcss: options.iconcss ??? null,
    size: options.size ??? 'sm',
    variant: options.variant ??? '',
    colour: options.colour ??? 'primary'
} -%}

{%- block icon -%}
{%- endblock -%}
