{%- extends '_organisms/grids/_grid--props' -%}

{#
    ### PROPERTIES ###
    ------------------

    INHERITED FROM: `_organisms/grids/grid--props.twig`

    ## EXTENDED
    -----------
    plugins (Collection): Collection of plugins

    ### COMPONENTS ###
    ------------------

    ## MOLECULES

    card--plugin: `_molecules/card/card--plugin.twig`
#}

{%- block grid -%}

    {%- set props = props|merge({
        plugins: plugins ??? null,
    }) -%}

    {%- minify -%}
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-12 md:py-32 container max-w-screen-xl mx-auto">

            {%- for plugin in props.plugins -%}

                {%- include '_molecules/cards/card--plugin' ignore missing with {
                    content: plugin,
                    utilities: ''
                } -%}

            {%- endfor -%}

        </section>
    {%- endminify -%}
{%- endblock -%}
