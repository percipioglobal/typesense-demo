{%- import '_macros/atoms' as render -%}

{#
    ### PROPERTIES ###
    ------------------

    items: list of grid items
    utilities: TW classes

    ## EXTENDED
    -----------


    ### COMPONENTS ###
    ------------------

    ## MOLECULES

    grid-item--content: `_molecules/grid-items/grid-item--content`
#}

{%- set items = items|default(null) -%}
{%- set utilities = utilities|default('') -%}

{%- minify -%}
    <section class="container max-w-screen-xl mx-auto py-8 md:py-16 overflow-x-hidden {{ utilities -}}">
    
        {%- for item in items.gridItems.collect() ??? null -%}

            {%- include '_molecules/grid-items/grid-item--content-image-half' ignore missing with {
                item: item,
                settings: {
                    position: loop.index0 is even ? 'left' : 'right',
                }
            } -%}

        {%- endfor -%}

    </section>
{%- endminify -%}
